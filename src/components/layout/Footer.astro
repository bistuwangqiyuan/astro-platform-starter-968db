          </ul>
        </div>
        
        <!-- 支持链接 -->
        <div>
          <h3 class="text-white font-semibold mb-4">支持</h3>
          <ul class="space-y-2">
            <li>
              <a href="/docs" class="text-gray-400 hover:text-white transition-colors">
                使用文档
              </a>
            </li>
            <li>
              <a href="/api" class="text-gray-400 hover:text-white transition-colors">
                API文档
              </a>
            </li>
            <li>
              <a href="/contact" class="text-gray-400 hover:text-white transition-colors">
                联系我们
              </a>
            </li>
            <li>
              <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">
                隐私政策
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- 底部版权信息 -->
    <div class="border-t border-gray-800 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm mb-4 md:mb-0">
          © {currentYear} Astro Platform. 保留所有权利。
        </div>
        <div class="flex items-center space-x-4">
          <!-- 技术栈标识 -->
          <div class="flex items-center space-x-2 text-sm text-gray-400">
            <span>构建于</span>
            <a 
              href="https://astro.build" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-orange-400 hover:text-orange-300 transition-colors"
              title="Astro"
            >
              Astro
            </a>
            <span>+</span>
            <a 
              href="https://tailwindcss.com" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-cyan-400 hover:text-cyan-300 transition-colors"
              title="Tailwind"
            >
              Tailwind
            </a>
            <span>+</span>
            <a 
              href="https://supabase.com" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-green-400 hover:text-green-300 transition-colors"
              title="Supabase"
            >
              Supabase
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 返回顶部按钮 -->
  <button
    id="back-to-top"
    type="button"
    class="fixed bottom-8 right-8 p-3 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300 transform scale-0 opacity-0 z-40"
    aria-label="返回顶部"
    title="返回顶部"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>
</footer>

<script>
  // Reason: 返回顶部功能
  document.addEventListener('DOMContentLoaded', () => {
    const backToTopButton = document.getElementById('back-to-top');
    
    if (backToTopButton) {
      // 监听滚动事件
      window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const shouldShow = scrollTop > 300;
        
        if (shouldShow) {
          backToTopButton.classList.remove('scale-0', 'opacity-0');
          backToTopButton.classList.add('scale-100', 'opacity-100');
        } else {
          backToTopButton.classList.add('scale-0', 'opacity-0');
          backToTopButton.classList.remove('scale-100', 'opacity-100');
        }
      });
      
      // 点击返回顶部
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
        
        console.log('[Footer] 返回顶部');
      });
    }
    
    // Reason: 页脚链接点击统计
    const footerLinks = document.querySelectorAll('footer a');
    footerLinks.forEach(link => {
      link.addEventListener('click', (event) => {
        const href = link.getAttribute('href');
        if (href && !href.startsWith('#')) {
          console.log(`[Footer] 点击链接: ${href}`);
        }
      });
    });
  });
</script>

<style>
  /* Reason: 确保footer始终在页面底部 */
  footer {
    margin-top: auto;
  }
  
  /* Reason: 返回顶部按钮的平滑动画 */
  #back-to-top {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  #back-to-top:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
  }
  
  /* Reason: 响应式设计优化 */
  @media (max-width: 768px) {
    #back-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
      padding: 0.75rem;
    }
  }
</style>